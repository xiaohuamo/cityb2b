<body>

<{include file='header.htm'}>

<div class="container">
	<div class="wrap clearfix">
		<{include file='company/side.htm'}>
		<div class="main">
			<div class="box2">
				<{include file='company/side_business_option_menu.htm'}>
				
				<div class="colCurTit">
					<span class="links">
						<a class='btn-yellow' href="<{$http_root_www}>factory/store_house_edit" class="link2"><i class='fa fa-plus'></i>New</a>
					</span>
				</div>
				<div class="main-form">			
				<form id="memberForm" class='form-style-green' action="" method="post" target="post_frame" enctype="multipart/form-data">

				<div class="input-box multi-select clearfix">

							<h1>Store House Management</h1>

						</div> </form> </div>
				<div class="main-list">
					<table cellspacing="0" cellpadding="0" width="100%" >
						<thead>
							<tr>

								<th>Id</th>
								<th>Code</th>
								<th>Name</th>
								<th>note</th>
								<th>Active</th>
								<th>Store Edit</th>
								<th>Area Edit</th>
							</tr>
